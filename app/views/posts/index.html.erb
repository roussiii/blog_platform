<h1>Viewing All Posts</h1>
<% @posts.each do |post| %>
  <div class="index-post-title">
    <h2> <%= post.title %> </h2>
  </div>
  <div class="index-post content">
    <p> <%= post.content %> </p>
  </div>
  <div class="index-post-edit">
    <%= link_to "Edit Post", edit_post_path(post) %>
  </div>
<% end %>

<%= link_to "Create new post", new_post_path %>
